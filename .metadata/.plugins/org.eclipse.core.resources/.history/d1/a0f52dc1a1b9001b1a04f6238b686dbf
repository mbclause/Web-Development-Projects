package finalexam.model;

public class Book {

	final int   id;
	
	String   name;
	
	String   genre;
	
	int   genreId;
	
	public Book()
	{
		id = 0;
		
		name = "";
		
		genre="";
		
		genreId = 0;
	}
	
	public Book(int id, String name, String genre, int genreId)
	{
		this.id = 0;
		
		this.name = name;
		
		this.genre = genre;
		
		this.genreId = genreId;
	}

	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public String getGenre() {
		return genre;
	}

	public void setGenre(String genre) {
		this.genre = genre;
	}

	public int getGenreId() {
		return genreId;
	}

	public void setGenreId(int genreId) {
		this.genreId = genreId;
	}

	public int getId() {
		return id;
	}
}
